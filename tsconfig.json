{
    "compilerOptions": {
        "allowJs": true,
        "module": "CommonJS",
        "target": "ES2021",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "tmp",
        "baseUrl": ".",
        "paths": {
            "@spt/*": [
                "types/*"
            ]
        }
    },
    "lib": [
        "ES2021"
    ],
    "include": [
        "src/**/*",
        "types/**/*"
    ],
}